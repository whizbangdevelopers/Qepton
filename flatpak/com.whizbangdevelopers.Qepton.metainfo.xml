<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>com.whizbangdevelopers.Qepton</id>
  <name>Qepton</name>
  <summary>Prompt and Code Snippet Manager powered by GitHub Gist</summary>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>
  <developer_name>whizBANG Developers</developer_name>

  <description>
    <p>
      Qepton is a powerful prompt and code snippet manager that connects to GitHub Gist.
      Built with Vue 3 and Quasar Framework, it provides a modern, responsive
      interface for managing your code snippets.
    </p>
    <p>Features include:</p>
    <ul>
      <li>Full GitHub Gist integration</li>
      <li>Smart tagging with auto-detection by language</li>
      <li>Fuzzy search across all snippets</li>
      <li>Syntax highlighting with CodeMirror 6</li>
      <li>Markdown preview with KaTeX math support</li>
      <li>Jupyter notebook support</li>
      <li>Dark mode</li>
    </ul>
  </description>

  <launchable type="desktop-id">com.whizbangdevelopers.Qepton.desktop</launchable>

  <url type="homepage">https://github.com/whizbangdevelopers/Qepton</url>
  <url type="bugtracker">https://github.com/whizbangdevelopers/Qepton/issues</url>

